@model IEnumerable<ShungoExpress.Web.Data.Entities.Motorized>

@{
    ViewData["Title"] = "Index";
}

<h1>Motorizados</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
</p>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
          <th>
            @Html.DisplayNameFor(model => model.DisplayName)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Plate)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.IdNumber)
          </th>
            <th>
                @Html.DisplayNameFor(model => model.Available)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
          <td>
            @Html.DisplayFor(modelItem => item.DisplayName)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Plate)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.IdNumber)
          </td>
          <td>
            @if (item.Available)
            {
              @Html.Encode("Si")
            }
            else
            {
              @Html.Encode("No")
            }
          </td>
            <td>
              <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Editar</a>
              <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-warning">Detalles</a>
              @if (User.IsInRole("Admin"))
              {
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
              }
            </td>
        </tr>
}
    </tbody>
</table>
