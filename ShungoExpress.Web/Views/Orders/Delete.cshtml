@model ShungoExpress.Web.Data.Entities.Order

@{
    ViewData["Title"] = "Delete";
}
<link href="~/node_modules/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

<h1>Eliminar</h1>

<h3>Estás seguro que quieres eliminar este pedido?</h3>
<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
      <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.OrderDate)
      </dt>
      <dd class="col-sm-10">
        @Html.DisplayFor(model => model.OrderDate)
      </dd>
      <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Client.Address)
      </dt>
      <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Client.Address)
      </dd>
      <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Motorized.DisplayName)
      </dt>
      <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Motorized.DisplayName)
      </dd>
      <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Description)
      </dt>
      <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Description)
      </dd>
      <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Cost)
      </dt>
      <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Cost)
      </dd>
      <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.DeliveryDate)
      </dt>
      <dd class="col-sm-10">
        @Html.DisplayFor(model => model.DeliveryDate)
      </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-success"><i class="fa fa-chevron-left"></i> Atrás</a>
    </form>
</div>
