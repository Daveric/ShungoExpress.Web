@model ShungoExpress.Web.Models.OrderViewModel

@{
    ViewData["Title"] = "Create";
}

<h4>Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
              <label asp-for="ClientId" class="control-label"></label>
              <select asp-for="ClientId" asp-items="Model.Clients" class="form-control"></select>
              <span asp-validation-for="ClientId" class="text-danger"></span>
              <br/>
              <label>o</label>
              <a asp-controller="Clients" asp-action="Create" asp-route-redirectUrl="Orders/Create" class="btn btn-outline-primary">Agregar Cliente</a>
            </div>

          <div class="form-group">
            <label asp-for="MotorizedId" class="control-label"></label>
            <select asp-for="MotorizedId" asp-items="Model.Motorizeds" class="form-control"></select>
            <span asp-validation-for="MotorizedId" class="text-danger"></span>
            <br/>
            <label>o</label>
            <a asp-controller="Motorizeds" asp-action="Create" asp-route-redirectUrl="Orders/Create" class="btn btn-outline-primary">Agregar Motorizado</a>
          </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success"><i class="fa fa-chevron-left"></i> Atrás</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
