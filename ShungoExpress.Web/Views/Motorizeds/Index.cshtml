@model IEnumerable<ShungoExpress.Web.Data.Entities.Motorized>

@{
    ViewData["Title"] = "Index";
}

<h1>Motorizeds</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Available)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
              @Html.DropDownListFor(modelItem => item.Available, new List<SelectListItem>()
              {
                new SelectListItem() { Text = "Yes", Value = "True" },
                new SelectListItem() { Text = "No", Value = "False"}
              }, "Select.....", new { @id = "flag", @class="form-control" })
              @Html.ValidationMessageFor(modelItem => item.Available)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
